#!/usr/bin/env xdg-open
[Desktop Entry]
Name=Add Luxtorpeda to Steam
Exec=bash -xc 'rm -f /tmp/add_luxtorpeda_to_steam.sh; curl -S -s -L -O --output-dir /tmp --connect-timeout 60 "https://github.com/MrAwesome/luxtorpeda-openmw-helpers/raw/main/add_luxtorpeda_to_steam.sh" || err=1; [ -z "$err" ] && bash /tmp/add_luxtorpeda_to_steam.sh || err=2; [ ! -z "$err" ] && ( echo "Something went wrong. Are you connected to the Internet? If this looks like a bug, please report it at: https://github.com/MrAwesome/luxtorpeda-openmw-helpers/issues"; read )'
Icon=steamdeck-gaming-return
Terminal=true
Type=Application
StartupNotify=false
