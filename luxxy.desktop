#!/usr/bin/env xdg-open
[Desktop Entry]
Name=Add OpenMW to Steam
Exec=bash -c 'rm -f /tmp/add_openmw_to_steam.sh; if curl -S -s -L -O --output-dir /tmp --connect-timeout 60 "https://github.com/MrAwesome/luxtorpeda-openmw-helpers/releases/latest/download/run.sh"; then bash /tmp/add_openmw_to_steam.sh; else echo "Something went wrong. Are you connected to the Internet? If this looks like a bug, please report it at: https://github.com/MrAwesome/luxtorpeda-openmw-helpers/issues"; read; fi'
Icon=steamdeck-gaming-return
Terminal=true
Type=Application
StartupNotify=false
